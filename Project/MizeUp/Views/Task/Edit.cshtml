@model MizeUP.Models.TaskModel

@{
    ViewBag.Title = Languages.Task;
}

<link href="~/Content/css/bootstrap-datepicker3.min.css" rel="stylesheet" />

<div class="container">
    <div class="page-header">
        <h2>
            <strong>@Languages.Task&nbsp;-&nbsp;@Languages.Registration</strong>
        </h2>
    </div>
    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Name, htmlAttributes: new { autocomplete = "off", @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger col-md-6" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.Subject, (SelectList)ViewBag.Subjects, Languages.Choose, htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger col-md-6" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Stage, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.Stage, (SelectList)ViewBag.Stage, htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Stage, "", new { @class = "text-danger col-md-6" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.Status, (SelectList)ViewBag.Status, htmlAttributes: new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger col-md-6" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DeadLine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.DeadLine, htmlAttributes: new { @class = "form-control datepicker" })
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.DeadLine, "", new { @class = "text-danger col-md-6" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", row = "4" })
                </div>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger col-md-6" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <button type="submit" class="btn btn-success">@Languages.Save</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script>
        $('.datepicker').datepicker();
    </script>
    <script>
        $('#Subject').val('@Model.Subject.Id');

        $('#Stage').val('@Model.Stage');

        $('#Status').val('@Model.Status');
    </script>
}

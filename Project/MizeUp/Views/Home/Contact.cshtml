@model MizeUP.Models.ContactModel

@{
    ViewBag.Title = Languages.Contact;
}

<div class="container">
    <div class="page-header">
        <h2 class="text-left">
            <strong>@Languages.Contact</strong>
        </h2>
    </div>
    <div class="col-md-6 text-center">
        <img src="@Url.Content("~/Content/img/contato.png")" alt="@Languages.Contact" height="140" width="140">
        <h2>@Languages.ContactUs</h2>
        <p class="text-left">
            @Languages.MessageContactTeam
        </p>
    </div>
    <div class="col-md-6 text-left">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { autocomplete = "off", @class = "form-control", required = "true" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { autocomplete = "off", @class = "form-control", required = "true" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Message)
                @Html.TextAreaFor(model => model.Message, htmlAttributes: new { autocomplete = "off", @class = "form-control", required = "true" })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
            <div>
                <button type="submit" class="btn btn-success">@Languages.Send</button>
            </div>
        }
    </div>
</div>